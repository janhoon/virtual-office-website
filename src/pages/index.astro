---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Faq from '../components/Faq.astro';
import Waitlist from '../components/Waitlist.astro';
import Footer from '../components/Footer.astro';

const title = 'Speke | Better Team Communication Beyond Email';
const description = 'Speke helps enterprise teams move beyond email by combining organized written communication with quick voice conversations in a private company workspace.';
const canonical = 'https://virtual-office-dev.janhoon.com/';
const keywords = 'enterprise communication platform, internal communication software, email alternative for teams, private company chat with voice, remote team collaboration software';

const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'SoftwareApplication',
      name: 'Speke',
      applicationCategory: 'BusinessApplication',
      operatingSystem: 'Web',
      url: canonical,
      description,
      offers: {
        '@type': 'Offer',
        price: '0',
        priceCurrency: 'USD'
      },
      featureList: [
        'Organization-isolated workspaces',
        'Text and call channels',
        'Real-time team messaging',
        'Presence and speaking indicators',
        'Invite links and member roles'
      ]
    },
    {
      '@type': 'FAQPage',
      mainEntity: [
        {
          '@type': 'Question',
          name: 'Who is Speke built for?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Speke is built for enterprises and established companies with distributed teams that need both structured text and instant voice communication.'
          }
        },
        {
          '@type': 'Question',
          name: 'How is this different from email and traditional chat tools?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Speke keeps written communication organized in one place and adds instant voice conversations when teams need quick alignment, while preserving enterprise privacy and access controls.'
          }
        },
        {
          '@type': 'Question',
          name: 'Does this support organization-level privacy?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Yes. Speke uses organization-level workspace isolation so each company collaborates inside its own private context.'
          }
        }
      ]
    }
  ]
};
---

<Layout 
  title={title}
  description={description}
  canonical={canonical}
  keywords={keywords}
  schema={schema}
>
  <main>
    <Hero />
    <Features />
    <Faq />
    <Waitlist />
    <Footer />
  </main>
</Layout>
