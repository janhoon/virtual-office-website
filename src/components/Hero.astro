---
import { turnstileSiteKey } from '../constants/turnstile';
---

<header class="site-header">
  <div class="shell header-inner">
    <a href="/" class="brand-mark" aria-label="Speke home">
      <img src="/branding-new/black/full/white_logo_transparent_background.png" alt="Speke" class="brand-logo" />
    </a>
    <nav class="top-nav" aria-label="Primary">
      <a href="#features">Features</a>
      <a href="#demo">Demo</a>
      <a href="#download">Download</a>
    </nav>
    <a
      href="#waitlist"
      class="button button-primary header-cta"
      data-track-cta
      data-cta-text="Get Early Access"
      data-cta-location="header"
      data-cta-url="#waitlist"
    >
      Get Early Access
    </a>
  </div>
</header>

<section class="hero" id="top">
  <div class="hero-noise" aria-hidden="true"></div>
  <div class="shell hero-grid">
    <div class="hero-copy">
      <p class="eyebrow reveal">The virtual office for remote teams</p>
      <h1 class="reveal reveal-d1">
        Stop scheduling.<span class="text-accent">Just talk.</span>
      </h1>
      <p class="hero-lead reveal reveal-d2">
        Persistent voice channels, live presence, and instant screen sharing.
        Your team is always one click away â€” no meeting links, no calendar invites.
      </p>

      <form class="hero-waitlist reveal reveal-d3" data-waitlist-form data-waitlist-source="hero">
        <input
          type="email"
          name="email"
          placeholder="Your work email"
          required
          autocomplete="email"
          aria-label="Work email"
          class="waitlist-input"
          data-waitlist-email
        />
        <button
          type="submit"
          class="button button-primary"
          data-track-cta
          data-cta-text="Get Early Access"
          data-cta-location="hero"
          data-cta-url="#waitlist"
        >
          Get Early Access
        </button>
        <div class="turnstile-widget">
          <div
            class="cf-turnstile"
            data-sitekey={turnstileSiteKey}
            data-appearance="interaction-only"
            data-action="waitlist_signup"
          ></div>
        </div>
      </form>
      <p class="waitlist-message hero-waitlist-message" aria-live="polite" data-waitlist-message></p>

      <div class="trust-indicators reveal reveal-d4">
        <span><span class="trust-dot" aria-hidden="true"></span> Free during beta</span>
        <span><span class="trust-dot" aria-hidden="true"></span> No credit card required</span>
      </div>
    </div>

    <div class="hero-media reveal reveal-d2">
      <div class="media-placeholder" data-slot="hero-demo-video" aria-label="Hero demo video placeholder">
        <span>[ Hero Demo Video ]</span>
      </div>
    </div>
  </div>
</section>
